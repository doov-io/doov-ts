{
  "name": "doov-ts",
  "version": "0.1.0",
  "main": "dist/index.js",
  "umd:main": "dist/doov-ts.umd.production.js",
  "module": "dist/doov-ts.es.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test-ci": "tsdx test --ci --reporters=default --reporters=jest-junit && prettier --check \"{./src/**/*.tsx,./src/**/*.ts,./src/**/*.json}\"",
    "prettier": "prettier --write \"{./src/**/*.tsx,./src/**/*.ts,./src/**/*.json}\""
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "husky": "^2.2.0",
    "jest-junit": "^6.4.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "tsdx": "^0.5.6",
    "typescript": "^3.4.5"
  }
}
